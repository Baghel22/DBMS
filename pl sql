create table department (
 DNO NUMBER (3),
 DNAME VARCHAR2 (10),
 DLOC VARCHAR2(10)
 );
 
 CREATE OR REPLACE PROCEDURE ADDDEPTRECORD ( P_DNO IN NUMBER, P_DNAME IN VARCHAR2,P_DLOC IN VARCHAR2)
 AS 
 BEGIN 
 INSERT INTO DEPARTMENT VALUES ( P_DNO,P_DNAME,P_DLOC);
 END;
 
 DECLARE 
  DNO NUMBER (3);
	DNAME VARCHAR2 (10);
	DLOC VARCHAR2 (10);
	BEGIN 
	DNO:= 3;
	DNAME:= 'MCA';
	DLOC:= 'MEERUT';
	ADDDEPTRECORD(DNO,DNAME,DLOC);
	END;
